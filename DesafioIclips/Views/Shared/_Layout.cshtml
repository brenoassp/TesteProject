<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- sidebar -->
    <div class="side-bar bg-side-bar">
        <ul class="nav flex-column">
            <li class="nav-item mt-20 sidebar-item
                @(ViewContext.RouteData.Values["Action"].ToString() == "List" ? "sidebar-selected-item" : "")">
                @Html.ActionLink(
                    "INICIO",
                    "List",
                    "Pessoa",
                    null,
                    new
                    {
                        @class = "linknav"
                    }
                )
                <span class="badge badge-info badge-pill fs-10 float-right mr-20 badge-all"></span>
            </li>

            <li class="nav-item sidebar-item
                @(ViewContext.RouteData.Values["Action"].ToString() == "Situacao" &&
                    ViewContext.RouteData.Values["situacao"].ToString() == "emAndamento" ? "sidebar-selected-item" : "")">
                @Html.ActionLink(
                    "EM ANDAMENTO",                                                  // linkText
                    "Situacao",                                    // actionName
                    "Pessoa",                                                   // controllerName
                    new {                                                     // routeValues
                        situacao = "emAndamento"
                    },
                    new {
                        @class = "linknav"
                    }                                                      // htmlAttributes
                )
                <span class="badge badge-primary badge-pill fs-10 float-right mr-20 badge-andamento"></span>
            </li>

            <li class="nav-item sidebar-item
                @(ViewContext.RouteData.Values["Action"].ToString() == "Situacao" &&
                    ViewContext.RouteData.Values["situacao"].ToString() == "atrasadas" ? "sidebar-selected-item" : "")">
                @Html.ActionLink(
                    "ATRASADAS",
                    "Situacao",
                    "Pessoa",
                    new {
                        situacao = "atrasadas"
                    },
                    new
                    {
                        @class = "linknav"
                    }
                )
                <span class="badge badge-danger badge-pill fs-10 float-right mr-20 badge-atrasadas"></span>
            </li>
        </ul>
    </div>

    <!-- content -->
    <div class="content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/JavaScripts/Desafio.js")
    @RenderSection("scripts", required: false)
</body>
</html>
